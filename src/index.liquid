<style>
  .main-sections {
    display: flex;
    flex-direction: column;
    gap: var(--space-7);
  }
  .articles-link {
    display: block;
    margin-top: var(--space-4);
  }
  .profile {
    margin-bottom: var(--space-8);
  }
  .profile-content {
    display: flex;
    gap: var(--space-8);
    align-items: center;
  }
  .profile-text {
    flex: 2;
  }
  .profile-image {
    flex: 1;
    transition: all 0.3s ease;
  }
  .profile-image img {
    width: 100%;
    max-width: 300px;
    border-radius: 8px;
    transition: all 0.3s ease;
    cursor: pointer;
  }
  .profile-image img:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
  }
  .profile-links {
    display: flex;
    gap: var(--space-4);
    margin-top: var(--space-4);
  }
  .profile-link {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  .profile-link i {
    width: 20px;
    height: 20px;
    transition: all 0.3s ease;
  }
  .profile-link:hover {
    background-color: var(--color-bg-secondary);
    color: #3182ce; /* Blue color on hover */
    transform: translateY(-2px); /* Makes the link jump slightly */
  }
  .profile-link:hover i {
    transform: scale(1.1); /* Makes the icon slightly bigger */
    color: #3182ce; /* Blue color on hover */
  }
  @media (max-width: 768px) {
    .profile-content {
      flex-direction: column-reverse;
      text-align: center;
    }
    .profile-links {
      justify-content: center;
    }
    .profile-image img {
      max-width: 200px;
    }
  }
</style>


